      .col-lg-6
        = form_for :anything, html: { data: { controller: "validate", form: "", turbo: false} } do |f|
          .row.justify-content-center.gy-4
            .col-lg-6
              .field-group
                =f.label :first_name, "First Name", class: "label label--required"
                .field-container
                  =f.text_field :first_name, class: "field", data: { validate: "", email: ""}, placeholder: "Enter your first name"
                .field-helper
            .col-lg-6
              .field-group
                =f.label :last_name, "Last Name", class: "label label--required"
                .field-container
                  =f.text_field :last_name, class: "field", data: { validate: "", email: ""}, placeholder: "Enter your last name"
                .field-helper
            .col-lg-6
              .field-group
                =f.label :email, "Email Address", class: "label label--required"
                .field-container
                  =f.text_field :email, class: "field", data: { validate: "", email: ""}, placeholder: "Enter your email address"
                .field-helper
            .col-lg-6
              .field-group
                =f.label :contact_number, "Contact Number", class: "label label--required"
                .field-container
                  =f.text_field :contact_number, id:"mobile", class: "field", data: { validate: "", email: ""}
                  button type="button" data-controller='site--contact-mask'
                .field-helper
            .col
              .field-group
                =f.label :type_inquiry, "Type of Inquiry", class: "label label--required"
                .field-container
                  select.field.field--select
                    option value="" Type of Inquiry
            .field-group
              =f.label :message, "Message", class: "label label--required"
              .field-container
                textarea.field 
              .field-helper
            p.h6.text-center
              | By clicking submit, you agree to SFELPACO 
              a.fw-bold.text-secondary.hover-underline href="#{site_privacy_policy_path}" rel="noopener noreferrer" target="_blank" Privacy Policy 
              | and 
              a.fw-bold.text-secondary.hover-underline href="#{site_terms_and_conditions_path}" rel="noopener noreferrer" target="_blank" Terms & Conditions
              | .
            .col-md-4
              button.btn.btn--primary.btn--block.rounded-1 type="submit" Submit
